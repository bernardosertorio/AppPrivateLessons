{% extends "layout.njk" %}


{% block content %}

  <div class="card table-container">

    <div class="header">

      <a href="/teachers/create">Be a New Teacher</a>

      <form action="/teachers" method="GET">

        <input
          type="text"
          name="filter"
          placeholder="Filter by name"
        >
        <button type="submit">Filter</button>
      </form>

    </div>

    

    <table width="100%">

      <thead>

        <th>Complet Name</th>
        <th>Subjects</th>
        <th>Students</th>
        <th>Profile</th> 

      </thead>

      <tbody>

        {% for teacher in teachers %}

        <tr>
          
          <td>
            <span style="background-image: url({{teacher.avatar_url}})"></span>
            {{teacher.name}}
          </td>
          <td>{{teacher.occupation_areas}}</td>
          <td>{{teacher.total_students}}
          <td> <a href="/teachers/{{teacher.id}}"> Details </a></td>

        </tr>

        {% endfor %}

      </tbody>

    </table>

  </div>


{% endblock content %}
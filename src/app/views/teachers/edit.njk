{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section
      class="avatar" 
      style="background: url({{teacher.avatar_url}}) no-repeat center center">
    </section>
    <section class="details">
      <form method="POST" action="/teachers?_method=PUT">
        <h3>Edit Teacher</h3>

        {% include 'teachers/fields.njk' %}
        
        <input 
          type="hidden" 
          name="id" 
          value={{teacher.id}}
        />
      </form>
      <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
        <input 
          type="hidden" 
          name="id" 
          value={{teacher.id}}
        />
        <button type="submit">Delete</button> 
      </form>
    </section> 
  </div>
  <script src="/scripts.js"></script>

{% endblock content %}